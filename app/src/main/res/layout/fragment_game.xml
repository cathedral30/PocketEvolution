<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <info.hcooper.pocketevolution.ui.canvas.CanvasView
        android:id="@+id/game_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCreatureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:focusable="true"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintBottom_toBottomOf="@id/game_canvas"
        app:layout_constraintEnd_toEndOf="@id/game_canvas"
        />

</androidx.constraintlayout.widget.ConstraintLayout>